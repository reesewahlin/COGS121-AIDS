<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3BA684">


<TextView
        android:text="locus"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/textView"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:textSize="64sp"
        android:gravity="center|center_horizontal"
        android:fontFamily="sans-serif-condensed"
        tools:text="locus"
    android:textColor="#fff" />

    <Button
        android:text="Log in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_homescreen_login"
        android:background="@drawable/locus_button_light_red"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginStart="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.060000002"
        android:elevation="0dp"
        app:layout_constraintRight_toLeftOf="@+id/b_homescreen_signup"
        android:layout_marginEnd="8dp" />

    <Button
        android:text="Sign up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_homescreen_signup"
        android:layout_marginEnd="80dp"
        android:background="@drawable/locus_button_white"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="user"
        android:ems="10"
        android:id="@+id/tv_homescreen_user_text"
        android:textAlignment="center"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/b_homescreen_login"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#fff" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/s_homescreen_user"
        app:layout_constraintTop_toBottomOf="@+id/tv_homescreen_user_text"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>